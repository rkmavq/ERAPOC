<?xml version="1.0" encoding="UTF-8"?>
<validations tabset="errorSetScreen">
    
    <e type="direct" toptab="1" tab="1" err="oteuType" message="required"
        xpath="count(instance('ins')/oteuType[. = ''])" xpathSS="count(oteuType[. = ''])"/>

